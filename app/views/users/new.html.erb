
<div class="container">

<div class="text-center">

<div style="font-size:36px; font-family:futura">Welcome!</div>

<div class="container-fluid">
  <div class="row">
    <div class="dropdown">
    <div class="sign_up_button">
      <button class="btn btn-lg btn-primary" data-toggle="collapse" data-target="#signup_form">Sign Up</button>
      <button class="btn btn-lg btn-info" data-toggle="collapse" data-target="#login_form">Log in</button>
      <div id="signup_form" class="collapse">
      
        <ul style="list-style-type:none;">
          <%= form_tag '/users', method: :post do  %>
            <li><input type="text" name="name" placeholder="name"></li>
            <li><input type="email" name="email" placeholder="email"></li>
            <li><input type="password" name="password" placeholder="password"></li>
            <li><input type="password" name="password_confirmation" placeholder="confirm password"></li>
            <li><input type="submit" value="Submit"></li>
          <% end %>
        </ul>
      </div>
      
      <div id="login_form" class="collapse">
        <ul style="list-style-type:none;">
          <%= form_tag '/login', method: :post do  %>
            <div>
            <li><input type="email" name="email" placeholder="email"></li>
            <li><input type="password" name="password" placeholder="password"></li>
            <li><input type="submit" value="Submit"></li>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
</div>
</div>

<div class="container-fluid">
  <%= form_tag "/guest", method: :get do %>
    <input class="btn btn-sm btn-warning" type="submit" value="Continue as Guest">
  <% end %>
</div>
</div>
</div>







